{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "ckilo debug",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/kilo/ckilo/kilo",  // 指定可执行文件路径
        "args": ["/home/jack/Desktop/Projs/Codings/kilo/ckilo/kilo"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
